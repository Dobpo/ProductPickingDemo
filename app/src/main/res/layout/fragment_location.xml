<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Product Pen in order  20201112005" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/tlTableLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/tvRowTitle"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="Row"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRow"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="Item" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/tvColumnTitle"
                android:layout_marginStart="1dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="Column"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvColumn"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="Item" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/tvShelfTitle"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="Shelf"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvShelf"
                android:layout_marginEnd="0.5dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="Item" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tvWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Wrong row, column, shelf"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlTableLocation"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivScan"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_qr_code_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWrong" />

    <TextView
        android:id="@+id/tvTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Tap to scan \n location code"
        android:textColor="#1a1faf"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivScan" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="(can be row, column or\n shelf)"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleText" />
</androidx.constraintlayout.widget.ConstraintLayout>